<Window x:Class="EventualConsistencyAE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventualConsistencyAE"
        mc:Ignorable="d"
        x:Name="_this"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button x:Name="ConnectButton" Grid.Column="0">Connect with others</Button>
        <ListView Grid.Column="1" x:Name="ListViewConnectedServers" />
    </Grid>
</Window>